-- =====================================================
-- VIEW: vw_revenue_by_country
-- PURPOSE: Total revenue by billing country for geographic ranking.
-- USED IN: Performance Overview (top countries bar chart)
-- GRAIN: One row per billing country
-- =====================================================
CREATE OR REPLACE VIEW vw_revenue_by_country AS
SELECT
  billing_country AS country,
  SUM(total) AS total_revenue
FROM invoice
GROUP BY billing_country;
